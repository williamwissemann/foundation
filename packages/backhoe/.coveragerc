[run]
branch = True
source =
    backhoe

[paths]
source =
    src/backhoe
    **/site-packages/backhoe

[report]
skip_empty = true
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug
    raise AssertionError
    raise NotImplentedError
    if 0:
    if __name__ == .__main__.:

ignore_errors = True

[html]
title = backhoe Coverage Test Report
directory = docs/source/_static/coverage
